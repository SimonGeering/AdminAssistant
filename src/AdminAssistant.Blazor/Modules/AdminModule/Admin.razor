@page "/admin"
@inherits AdminAssistantModuleComponentBase<AdminAssistant.UI.Modules.AdminModule.IAdminViewModel>

<PageTitle>@vm.HeaderText</PageTitle>
<MudText class="mb-2" Typo="Typo.h6">@vm.HeaderText</MudText>
<MudText class="mb-2" Typo="Typo.subtitle1">@vm.SubHeaderText</MudText>

<MudTabs PanelClass="pa-4" Position="Position.Left" Outlined="true" Rounded="true" Border="true">
    <MudTabPanel Text="Banks">
        <AdminAssistant.Blazor.Modules.AccountsModule.Admin.BankListComponent />
    </MudTabPanel>
    <MudTabPanel Text="Currency">
        <AdminAssistant.Blazor.Modules.CoreModule.Admin.CurrencyListComponent />
    </MudTabPanel>
</MudTabs>
