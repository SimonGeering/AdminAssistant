@page "/accounts"
@inject AdminAssistant.UI.Modules.AccountsModule.IAccountsViewModel vm

@using AdminAssistant.Blazor.Client.Modules.AccountsModule.BankAccountTransactionList
@using AdminAssistant.Blazor.Client.Modules.AccountsModule.BankAccountRightSidebar

<div class="cl-accounts">
  <div class="cl-moduleBody">
    <div class="e-main-content">
      <div class="cl-moduleHeader">
        <h5>@this.vm.HeaderText</h5>
        <span>@this.vm.SubHeaderText</span>
      </div>
    </div>

    <SfSplitter Width="100%" Height="100%">
      <SplitterPanes>

        <SplitterPane>
          <ContentTemplate>
            <BankAccountTransactionListComponent></BankAccountTransactionListComponent>
          </ContentTemplate>
        </SplitterPane>

        <SplitterPane>
          <ContentTemplate>
            <BankAccountRightSidebarComponent></BankAccountRightSidebarComponent>
          </ContentTemplate>
        </SplitterPane>

      </SplitterPanes>
    </SfSplitter>
  </div>
</div>
