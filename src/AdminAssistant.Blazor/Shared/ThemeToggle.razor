<Switch TValue="bool" CheckedChanged="@OnThemeMeChanged" />

@code{

    [CascadingParameter]
    Theme? Theme { get; set; }

    private Task OnThemeMeChanged(bool darkMode)
    {
        if (darkMode)
        {
            SetThemeValues(Themes.Dark);
        }
        else
        {
            SetThemeValues(Themes.Light);
        }
        return Task.CompletedTask;
    }

    private void SetThemeValues(Theme newTheme)
    {
        if (Theme is null)
            return;

        Theme.IsRounded = newTheme.IsRounded;
        Theme.IsGradient = newTheme.IsGradient;
        Theme.LuminanceThreshold = newTheme.LuminanceThreshold;
        Theme.White = newTheme.White;
        Theme.Black = newTheme.Black;
        Theme.BodyOptions = newTheme.BodyOptions;
        Theme.BreakpointOptions = newTheme.BreakpointOptions;
        Theme.ContainerMaxWidthOptions = newTheme.ContainerMaxWidthOptions;
        Theme.ColorOptions = newTheme.ColorOptions;
        Theme.BackgroundOptions = newTheme.BackgroundOptions;
        Theme.TextColorOptions = newTheme.TextColorOptions;
        Theme.ThemeColorInterval = newTheme.ThemeColorInterval;
        Theme.ButtonOptions = newTheme.ButtonOptions;
        Theme.DropdownOptions = newTheme.DropdownOptions;
        Theme.InputOptions = newTheme.InputOptions;
        Theme.CardOptions = newTheme.CardOptions;
        Theme.ModalOptions = newTheme.ModalOptions;
        Theme.TabsOptions = newTheme.TabsOptions;
        Theme.ProgressOptions = newTheme.ProgressOptions;
        Theme.RatingOptions = newTheme.RatingOptions;
        Theme.AlertOptions = newTheme.AlertOptions;
        Theme.TableOptions = newTheme.TableOptions;
        Theme.BreadcrumbOptions = newTheme.BreadcrumbOptions;
        Theme.BadgeOptions = newTheme.BadgeOptions;
        Theme.SwitchOptions = newTheme.SwitchOptions;
        Theme.PaginationOptions = newTheme.PaginationOptions;
        Theme.SidebarOptions = newTheme.SidebarOptions;
        Theme.SnackbarOptions = newTheme.SnackbarOptions;
        Theme.StepsOptions = newTheme.StepsOptions;
        Theme.BarOptions = newTheme.BarOptions;
        Theme.DividerOptions = newTheme.DividerOptions;
        Theme.TooltipOptions = newTheme.TooltipOptions;
        Theme.SpinKitOptions = newTheme.SpinKitOptions;
        Theme.ListGroupItemOptions = newTheme.ListGroupItemOptions;
        Theme.SpacingOptions = newTheme.SpacingOptions;

        Theme.ThemeHasChanged();
    }
}
