@inherits AdminAssistantComponentBase<AdminAssistant.Modules.CoreModule.AdminUI.ICurrencyListViewModel>

<MudStack>
    <MudText Typo="Typo.subtitle1">Currency Selection List</MudText>
    <MudText Typo="Typo.subtitle2">Manage the list of currencies available to pick from when working with money throughout the application.</MudText>
    <MudTable Items="@this.vm.Currencies" Striped="true" Dense="true">
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Symbol</MudTh>
            <MudTh>Decimal Format</MudTh>
            <MudTh>&nbsp;</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="ID">@context.CurrencyID</MudTd>
            <MudTd DataLabel="Symbol">@context.Symbol</MudTd>
            <MudTd DataLabel="Decimal Format">@context.DecimalFormat</MudTd>
            <MudTd>
                <MudButton Size="Size.Small" Variant="Variant.Text" StartIcon="@Icons.Material.Filled.Edit" Color="Color.Info">Edit</MudButton>
                <MudButton Size="Size.Small" Variant="Variant.Text" StartIcon="@Icons.Material.Filled.Delete" Color="Color.Error">Delete</MudButton>
            </MudTd>
        </RowTemplate>
        <FooterContent>
            <MudButton Size="Size.Medium" Variant="Variant.Text" StartIcon="@Icons.Material.Filled.Refresh" Color="Color.Tertiary">Refresh</MudButton>
            <MudButton Size="Size.Medium" Variant="Variant.Text" StartIcon="@Icons.Material.Filled.Add" Color="Color.Info">Add</MudButton>
        </FooterContent>
    </MudTable>
</MudStack>


