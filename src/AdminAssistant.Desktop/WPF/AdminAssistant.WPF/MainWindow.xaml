<sf:ChromelessWindow x:Class="AdminAssistant.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:accountsView="clr-namespace:AdminAssistant.WPF.Modules.AccountsModule"
        xmlns:accountsViewModel="clr-namespace:AdminAssistant.UI.Modules.AccountsModule;assembly=AdminAssistant.UI"
        xmlns:dashboardView="clr-namespace:AdminAssistant.WPF.Modules.DashboardModule"
        xmlns:dashboardViewModel="clr-namespace:AdminAssistant.UI.Modules.DashboardModule;assembly=AdminAssistant.UI"                     
        xmlns:sf="http://schemas.syncfusion.com/wpf"
        xmlns:sfskin ="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        sfskin:SfSkinManager.VisualStyle="Office2019Black"
        mc:Ignorable="d"
        Title="Admin Assistant" Height="450" Width="800">

  <Window.Resources>
    <DataTemplate DataType="{x:Type dashboardViewModel:DashboardViewModel}">
      <dashboardView:DashboardComponent />
    </DataTemplate>
    <DataTemplate DataType="{x:Type accountsViewModel:AccountsViewModel}">
      <accountsView:AccountsComponent />
    </DataTemplate>
  </Window.Resources>
  
  <DockPanel LastChildFill="True">
    
    <ContentControl Content="{Binding SelectedViewModel}"/>
  </DockPanel>
  
</sf:ChromelessWindow>
