<UserControl x:Class="AdminAssistant.WPF.Modules.BudgetModule.BudgetComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DataContext="{Binding BudgetViewModel, Source={StaticResource ViewModelLocator}}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Label Grid.Row="1" Grid.Column="1" Content="{Binding HeaderText}"/>            
  </Grid>
</UserControl>
